<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Session #<%= @session.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/sessions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @session.user %>
          <a href="/sessions/<%= @session.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit session
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @session.user %>
          <a href="/delete_session/<%= @session.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete session
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @session.user.present? %>
          <a href="/users/<%= @session.user_id %>">
            <%= @session.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Starts at
      </dt>
      <dd>
        <%= @session.starts_at %>
      </dd>

      <dt>
        Ends at
      </dt>
      <dd>
        <%= @session.ends_at %>
      </dd>

      <dt>
        Message sent
      </dt>
      <dd>
        <%= @session.message_sent %>
      </dd>

      <dt>
        Professor
      </dt>
      <dd>
        <%= @session.professor %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <%= @session.location %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@session.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@session.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

