<h1>
  Edit session #<%= @session.id %>
</h1>

<hr>

<form action="/update_session/<%= @session.id %>" method="post">


  <div class="form-group">
    <label for="starts_at">
      Starts at
    </label>

    <input type="text" id="starts_at" name="starts_at" class="form-control" value="<%= @session.starts_at %>">
  </div>

  <div class="form-group">
    <label for="ends_at">
      Ends at
    </label>

    <input type="text" id="ends_at" name="ends_at" class="form-control" value="<%= @session.ends_at %>">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="message_sent">
    <input id="message_sent" class="form-check-input" name="message_sent" type="checkbox" value="1" <%= "checked" if @session.message_sent %>>
    <label for="message_sent" class="form-check-label">
      Message sent
    </label>
  </div>

  <div class="form-group">
    <label for="professor">
      Professor
    </label>

    <input type="text" id="professor" name="professor" class="form-control" value="<%= @session.professor %>">
  </div>

  <div class="form-group">
    <label for="location">
      Location
    </label>

    <input type="text" id="location" name="location" class="form-control" value="<%= @session.location %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update session
  </button>
</form>

<hr>

<a href="/sessions">
  Go back
</a>
