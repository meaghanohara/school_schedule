<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All sessions
    </h1>

    <a href="/sessions/new" class="btn btn-block btn-outline-secondary">
      Add a new session
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "session_templates/sessions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Starts at
        </th>

        <th>
          Ends at
        </th>

        <th>
          Message sent
        </th>

        <th>
          Professor
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @sessions.each do |session| %>
      <tr>
        <td>
          <%= session.id %>
        </td>

        <td>
          <% if session.user.present? %>
            <a href="/users/<%= session.user.id %>">
              <%= session.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= session.starts_at %>
        </td>

        <td>
          <%= session.ends_at %>
        </td>

        <td>
          <%= session.message_sent %>
        </td>

        <td>
          <%= session.professor %>
        </td>

        <td>
          <%= session.location %>
        </td>

        <td>
          <%= time_ago_in_words(session.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(session.updated_at) %> ago
        </td>

        <td>
          <a href="/sessions/<%= session.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @sessions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
