<%= search_form_for @q, :class => collapse_search_form, :id => "sessions_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :location_cont, "Location contains" %>
    <%= f.text_field :location_cont, :class => "form-control", :placeholder => "Location contains" %>
  </div>

  <div class="form-group">
    <%= f.label :professor_cont, "Professor contains" %>
    <%= f.text_field :professor_cont, :class => "form-control", :placeholder => "Professor contains" %>
  </div>

  <div class="form-group">
    <%= f.label :message_sent_eq, "Message sent" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :message_sent_eq, "1", checked: ((params[:q] && params[:q][:message_sent_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :message_sent_eq, "0", checked: ((params[:q] && params[:q][:message_sent_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :message_sent_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ends_at, "Ends at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='ends_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :ends_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Ends at greater than or equal to", :data => {:target => '#ends_atgteqPicker'} %>
          <div class="input-group-append" data-target='#ends_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='ends_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :ends_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Ends at less than or equal to", :data => {:target => '#ends_atlteqPicker'} %>
          <div class="input-group-append" data-target='#ends_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#ends_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#ends_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#ends_atgteqPicker').on("dp.change", function (e) {
              $('#ends_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#ends_atlteqPicker').on("dp.change", function (e) {
              $('#ends_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

