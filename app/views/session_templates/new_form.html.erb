<h1>
  Add a new session
</h1>


<hr>

<!-- Form session start -->
<form action="/create_session" method="post">
<!-- Form session end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @session.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for starts_at start -->
  <div class="form-group">
    <label for="starts_at">
      Starts at
    </label>

    <!-- Input for starts_at start -->
    <input type="text" id="starts_at" name="starts_at" class="form-control">
    <!-- Input for starts_at end -->
  </div>
  <!-- Label and input for starts_at end -->

  <!-- Label and input for ends_at start -->
  <div class="form-group">
    <label for="ends_at">
      Ends at
    </label>

    <!-- Input for ends_at start -->
    <input type="text" id="ends_at" name="ends_at" class="form-control">
    <!-- Input for ends_at end -->
  </div>
  <!-- Label and input for ends_at end -->

  <!-- Label and input for message_sent start -->
  <div class="form-check">
    <input type="hidden" value="0" name="message_sent">
    <!-- Input for message_sent start -->
    <input id="message_sent" class="form-check-input" name="message_sent" type="checkbox">
    <!-- Input for message_sent end -->
    <label for="message_sent" class="form-check-label">
      Message sent
    </label>
  </div>

  <!-- Label and input for professor start -->
  <div class="form-group">
    <label for="professor">
      Professor
    </label>

    <!-- Input for professor start -->
    <input type="text" id="professor" name="professor" class="form-control">
    <!-- Input for professor end -->
  </div>
  <!-- Label and input for professor end -->

  <!-- Label and input for location start -->
  <div class="form-group">
    <label for="location">
      Location
    </label>

    <!-- Input for location start -->
    <input type="text" id="location" name="location" class="form-control">
    <!-- Input for location end -->
  </div>
  <!-- Label and input for location end -->

  <button class="btn btn-block btn-outline-secondary">
    Create session
  </button>
</form>

<hr>

<a href="/sessions">
  Go back
</a>
